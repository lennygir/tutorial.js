{
    "compilerOptions": {
        "target": "es6",                          
        "module": "es6",
        "moduleResolution": "node",
        "lib": ["es6","dom"],                     
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true
    },
    "exclude": [
        "./demo/**/*",
        "./node_modules/**/*",
        "./dist/**/*"
    ],
    "include": [
        "./src/**/*"
    ]
}